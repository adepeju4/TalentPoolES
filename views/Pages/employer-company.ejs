							<input type="text" class="form-control em-input" id="companyname" placeholder="Enter name of company" />
						</div>
						<div class="col-sm-6 col-lg-6 form-group">
							<label for="company category">Company category</label>
							<select class="form-control em-input select" name="company-category" id="company-category">
								<option disabled selected value="empty">Select Category</option>
								<!-- content goes here -->
							</select>
						</div>
