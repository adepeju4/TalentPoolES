					<div class="row mt-5">
						<div class="col-sm-5 col-md-6 col-lg-6 mb-4">
							<label for="desc">Short Description</label>
							<textarea class="form-control em-input" name="desc" id="desc" cols="30" rows="6"></textarea>
						</div>
					</div>

					<div class="row mt-5">
						<div class="col-sm-6 col-md-7 col-lg-7">
							<label for="logo">Logo <span  id="logoname"></span></label>
							<div class="d-flex">
								<div class="btn new-btn ml-2 btn-block">
									<input type="file" name="logo" id="logo" accept="image/png, image/jpg, image/jpeg" onchange="showFile()"/>
									Browse
								</div>
							</div>
							<span class="small">300 x 300px recommended. JPGs and PNG supported</span>
						</div>
					</div>
					<hr class="mt-5" />
				</div>
