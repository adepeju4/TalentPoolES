					<div class="row mt-5">
						<div class="col-sm-4 col-lg-4 form-group">
							<label for="companyaddress">Company's Address</label>
							<input type="text" class="form-control em-input" id="companyaddress" placeholder="Enter address" />
						</div>
						<div class="col-sm-4 col-lg-4 form-group align-padding">
							<label for="companyemail">Company's Email</label>
							<input type="text" class="form-control em-input" id="companyemail" placeholder="Enter email" />
						</div>
						<div class="col-sm-4 col-lg-4 form-group">
							<label for="companyphone">Company's Phone No</label>
							<input type="text" class="form-control em-input" id="companyphone" placeholder="Enter phone no" />
						</div>
					</div>
					<hr class="mt-5" />
				</div>
			</div>

			<div id="profile" class="mt-5">
				<div class="container">
					<h5 class="heading-color pt-3">Profile Details</h5>

