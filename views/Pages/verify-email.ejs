    <div class="card verify-card resend-form-wrap" id="resend-form">
      <div class="card-body d-flex flex-column align-items-center">
        <div class="my-3">
          <img src="img/logo.svg" alt="logo" />
        </div>
        <!-- dnxbnlrkjfd,cxnm
